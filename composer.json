{
  "name": "unofficialmc2/http-client",
  "description": "Client HTTP utilisant CUrl",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "HttpClient\\": "./src/HttpClient",
      "HttpClientStub\\": "./src/HttpClientStub"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "./Test"
    }
  },
  "require": {
    "php": "^7.4",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^1.4",
    "ocramius/package-versions": "^2.1",
    "symfony/process": "^5.4",
    "monolog/monolog": "^2.4"
  }
}
